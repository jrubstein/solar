{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test",
    "prettier": "lerna run prettier"
  },
  "devDependencies": {
    "husky": "^1.1.3",
    "lerna": "^3.4.3",
    "lint-staged": "^8.0.4",
    "prettier": "^1.14.3",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{tsx?}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
